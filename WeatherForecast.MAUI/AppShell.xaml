<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WeatherForecast.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:WeatherForecast.MAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="WeatherForecast.MAUI">

    <ShellContent 
        Title="Clima"
        ContentTemplate="{DataTemplate local:Forecast}"
        Route="Forecast"/>
    
    <ShellContent
        Title="Localidades"
        ContentTemplate="{DataTemplate local:FindLocations}"
        Route="FindLocation" />

</Shell>
